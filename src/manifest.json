{
  "name": "crx-react",
  "description": "A Chrome extension demo.",
  "version": "1.0.0",
  "action": {
    "default_popup": "../popup.html"
  },
  "background": {
    "service_worker": "background.ts"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.nts.live/*"
      ],
      "js": [
        "content-scripts/content.tsx"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "assets/*"
      ]
    }
  ],
  "manifest_version": 3
}
